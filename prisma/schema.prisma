generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id             String   @id @default(cuid())
  certificateId  String   @unique
  studentName    String
  rollNumber     String
  issueDate      DateTime
  certificateHash String
  course         String
  institution    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([certificateId, rollNumber])
}
