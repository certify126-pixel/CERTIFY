
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Certificates can be read by anyone, but only created, updated, or deleted by authenticated users.
    match /certificates/{certificateId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Users can create their own user document (register), but cannot read, update or delete other user documents.
    // This provides basic security for user account information.
    match /users/{userId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
